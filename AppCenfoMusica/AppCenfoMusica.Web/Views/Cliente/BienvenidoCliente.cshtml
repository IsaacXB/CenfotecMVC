@model AppCenfoMusica.Web.ViewModels.GestionClientesVM

@{
    ViewData["Title"] = "BuscarClientePorID";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Bienvenido, @Model.Cliente.NombreUsuario</h1>
<h4>Hora de ingreso: @System.DateTime.Now</h4>
<br />
@if (Model.Error == null)
{
    if (ViewBag.TipoCliente != null)
    {
        <div class="alert alert-info">@ViewBag.TipoCliente</div>

    }
    if (ViewBag.Accion != null)
    {
        <div class="alert alert-success">@ViewBag.Accion</div>
    }
    <br />
    <div class="card">
        <div class="card-header">
            <b>@Model.Cliente.Nombre</b>
        </div>
        <div class="card-body">
            <table class="table table-hover">
                <tr>
                    <td>
                        @Html.DisplayNameFor(model => model.Cliente.Nombre)
                    </td>
                    <td>
                        @Model.Cliente.Nombre
                    </td>
                </tr>
                <tr>
                    <td>
                        @Html.DisplayNameFor(model => model.Cliente.NombreUsuario)
                    </td>
                    <td>
                        @Model.Cliente.NombreUsuario
                    </td>
                </tr>
                <tr>
                    <td>
                        @Html.DisplayNameFor(model => model.Cliente.Email)
                    </td>
                    <td>
                        @Model.Cliente.Email
                    </td>
                </tr>
                <tr>
                    <td>
                        @Html.DisplayNameFor(model => model.Cliente.Estado)
                    </td>
                    <td>
                        @Model.Cliente.Estado
                    </td>
                </tr>
            </table>
        </div>
    </div>
    <br />
    <div class="btn-group">
        <a class="btn btn-outline-info" asp-action="ListarClientes">Regresar</a>
        @Html.ActionLink("Editar Estado", "EditarEstado", new {  id=Model.Cliente.IdEntidad }, new { @class = "btn btn-outline-primary" })
        @Html.ActionLink("Editar Datos", "EditarDatos", new {  id=Model.Cliente.IdEntidad }, new { @class = "btn btn-outline-primary" })
    </div>
}
else
{
    <div class="alert alert-danger">
        @Model.Error.MensajeError
    </div>
    <br />
    <a class="btn btn-outline-info" asp-action="ListarClientes">Regresar</a>
}
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
