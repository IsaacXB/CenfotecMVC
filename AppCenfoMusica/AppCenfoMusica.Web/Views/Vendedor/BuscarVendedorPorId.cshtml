@model AppCenfoMusica.Web.ViewModels.GestionVendedoresVM

@{
    ViewData["Title"] = "BuscarVendedorPorID";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Detalle del Vendedor</h1>
<br />
@if (Model.Error == null)
{
    <div class="card">
        <div class="card-header">
            <b>@Model.Vendedor.Nombre</b>
        </div>
        <div class="card-body">
            <table class="table table-hover">
                <tr>
                    <td>
                        @Html.DisplayNameFor(model => model.Vendedor.Nombre)
                    </td>
                    <td>
                        @Model.Vendedor.Nombre
                    </td>
                </tr>
                <tr>
                    <td>
                        @Html.DisplayNameFor(model => model.Vendedor.NombreUsuario)
                    </td>
                    <td>
                        @Model.Vendedor.NombreUsuario
                    </td>
                </tr>
                <tr>
                    <td>
                        @Html.DisplayNameFor(model => model.Vendedor.Puesto)
                    </td>
                    <td>
                        @Model.Vendedor.Puesto
                    </td>
                </tr>
                <tr>
                    <td>
                        @Html.DisplayNameFor(model => model.Vendedor.Estado)
                    </td>
                    <td>
                        @Model.Vendedor.Estado
                    </td>
                </tr>
            </table>
        </div>
    </div>
    <br />
    <div class="btn-group">
        <a class="btn btn-outline-info" asp-action="Index">Regresar</a>
        @Html.ActionLink("Editar", "Edit", new { /* id = Model.PrimaryKey */ }, new { @class = "btn btn-outline-info" })
        <a class="btn btn-outline-info" href="#">Agregar al carrito</a>
    </div>
}
else
{
    <div class="alert alert-danger">
        @Model.Error.MensajeError
    </div>
    <br />
    <a class="btn btn-outline-info" asp-action="Index">Regresar</a>
}
